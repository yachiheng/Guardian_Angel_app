<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 預設時 -->
    <item android:color="@android:color/black">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="2dip" android:color="#eb6f6f" />
            <gradient android:angle="-90" android:startColor="#fdb9b9" android:endColor="#fdb9b9"  />
        </shape>
    </item>

    <!-- 按壓時 -->
    <item android:state_hovered="true">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="15dip" />
            <!--邊框-->
            <stroke android:width="1dip" android:color="#eb6f6f" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="#eb6f6f" android:endColor="#eb6f6f"  />
        </shape>
    </item>

</selector>