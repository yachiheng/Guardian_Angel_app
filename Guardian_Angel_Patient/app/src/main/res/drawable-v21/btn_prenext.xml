<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#ff60af"
    >
    <!--ripple中的color為點擊時的顏色-->

    <!--基本顏色-->
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="5dip" android:color="#FFECF5" />
            <gradient android:angle="-90" android:startColor="#80FF95CA" android:endColor="#80FFC1E0"  />
        </shape>
    </item>
</ripple>