<ripple
xmlns:android="http://schemas.android.com/apk/res/android"
android:color="#96fed1"
    >
<!--ripple中的color為點擊時的顏色-->

<!--基本顏色-->
<item>
    <shape android:shape="rectangle"  >
        <corners android:radius="50dip" />
        <stroke android:width="5dip" android:color="#FFECF5" />
        <gradient android:angle="-90" android:startColor="#80003e3e" android:endColor="#80007979"  />
    </shape>
</item>
</ripple>



